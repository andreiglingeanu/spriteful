/*
 * This Stylesheet was generated by the 'spriteful' gem, with the following options:
<%- if Spriteful.options -%>
 * 'spriteful <%= cli_options.join(' ') %>'.
<%- end -%>
 * Below there are several CSS classes to use the '<%= sprite.name %>'
 * sprite on you HTML code, as in:
 *
 *  <div class='<%= sprite.class_name %> <%= images.first.class_name %>'>Your markup here.</div>
 */

.<%= sprite.class_name %> {
  background-image: <%= sprite.background_image %>;
  background-repeat: no-repeat;
}
<% images.each do |image| %>
<%= image.selector %> {
  background-position: <%= image.background_position %>;
}
<% if image.svg? %>
.svg <%= image.selector %> {
  background-image: url(<%= image.data_uri %>);
  background-position: 0 0;
}
<% end -%>
<% end -%>
